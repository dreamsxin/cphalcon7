application live {
        live on;
        on_publish http://api.dev.eotu.com:9090/rtmp/publish;

        on_play http://api.dev.eotu.com:9090/rtmp/play;

        on_update http://api.dev.eotu.com:9090/rtmp/update;
        notify_update_timeout 30;

        # Publish/play end (repeats on disconnect)
        on_done http://api.dev.eotu.com:9090/rtmp/done;
        drop_idle_publisher 10s;

        record all;
        record_unique off;
        record_append on;
        record_path /var/www/html/video/live/flv;

        # Async notify about an flv recorded
        on_record_done http://api.dev.eotu.com:9090/rtmp/record_done;

        # push rtmp://w.gslb.lecloud.com/live;
        #exec /usr/local/bin/ffmpeg -i rtmp://localhost/live/$name -i rtmp://localhost/sound/$name -c:v copy -c:a copy -f flv rtmp://localhost/single/$name;
}
application hls {
    live on;

    hls on;
    hls_path /var/www/html/video/hls;
    hls_continuous on;
    hls_cleanup off;
    hls_nested on;
    hls_fragment 10s;
    hls_playlist_length 1m;
}
